<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Income Overview</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        .navbar {
            background-color: #007BFF;
            color: white;
            padding: 15px;
            text-align: center;
        }
        .navbar a {
            color: white;
            margin: 0 15px;
            text-decoration: none;
        }
        .container {
            width: 80%;
            margin: 20px auto;
        }
        .message {
            color: #555;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        .btn {
            padding: 10px 15px;
            background-color: #007BFF;
            border: none;
            color: white;
            cursor: pointer;
        }
        .btn:hover {
            background-color: #0056b3;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group input {
            padding: 10px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <a href="/home">Home</a>
        <a href="/logout">Logout</a>
    </div>

    <div class="container">
        <h1>Category Overview for User: <%= id %></h1>
        
        <% if (categories.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Categorie Name</th>
                    <th>Budget Amount</th>
                    <th>Daily Budget</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(function(category) { %>
                <tr>
                    <td><%= category.category_name %></td>
                    <td><%= parseFloat(category.budget_amount).toLocaleString('id-ID', { style: 'currency', currency: 'IDR', minimumFractionDigits: 2 }) %></td>
                    <td><%= parseFloat(category.daily_budget).toLocaleString('id-ID', { style: 'currency', currency: 'IDR', minimumFractionDigits: 2 }) %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <% } else { %>
        <p>No income entries available. Add new income below.</p>
        <% } %>

        <h2>Add New Category</h2>
        <form action="/categories/add" method="POST">
            <div class="form-group">
                <label for="name">Category's Name</label>
                <input type="text" id="name" name="CatName" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input type="text" id="description" name="description" required>
            </div>
            <div class="form-group">
                <label for="frequency">frequency</label>
                <input type="number" id="frequency" name="frequency" min="1" required>
            </div>
            <button type="submit" class="btn">Add Income</button>
        </form>
    </div>
</body>
</html>
